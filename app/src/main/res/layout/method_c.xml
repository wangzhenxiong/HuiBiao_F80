<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/yure_tiem">

            <AutoCompleteTextView
                android:id="@+id/yrsj"
                style="@style/AutoCompleteTextViewStyle"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/test_time">

            <AutoCompleteTextView
                android:id="@+id/jcsj"
                style="@style/AutoCompleteTextViewStyle"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/unit_input">
            <AutoCompleteTextView
                android:id="@+id/unit_input"
                style="@style/AutoCompleteTextViewStyle"
                 />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/jiaozhuna">

            <AutoCompleteTextView
                android:id="@+id/jzqxa"
                style="@style/AutoCompleteTextViewStyle"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/jiaozhunb">

            <AutoCompleteTextView
                android:id="@+id/jzqxb"
                style="@style/AutoCompleteTextViewStyle"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/yin_from">

            <AutoCompleteTextView
                android:id="@+id/yinxfwa"
                style="@style/AutoCompleteTextViewStyle"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/yin_to">

            <AutoCompleteTextView
                android:id="@+id/yinxfwb"
                style="@style/AutoCompleteTextViewStyle"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/yang_from">

            <AutoCompleteTextView
                android:id="@+id/yangxfwa"
                style="@style/AutoCompleteTextViewStyle"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/yang_to">

            <AutoCompleteTextView
                android:id="@+id/yangxfwb"
                style="@style/AutoCompleteTextViewStyle"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/keyi_from">

            <AutoCompleteTextView
                android:id="@+id/kyfwa"
                style="@style/AutoCompleteTextViewStyle"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:hint="@string/keyi_to">

            <AutoCompleteTextView
                android:id="@+id/kyfwb"
                style="@style/AutoCompleteTextViewStyle"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>