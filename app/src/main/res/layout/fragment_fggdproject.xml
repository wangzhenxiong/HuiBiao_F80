<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.dy.huibiao_f80.mvp.ui.widget.lettersnavigation.search.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:hint="请输入检测项目"
        android:textColorHint="#9B9999"
        android:maxLines="1"
        android:textSize="15dp"/>

    <RelativeLayout
        android:layout_below="@id/filter_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.dy.huibiao_f80.mvp.ui.widget.lettersnavigation.search.CharIndexView
            android:id="@+id/charIndexView"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:charTextColor="#000000"
            app:indexTextColor="#ff00ff"
            app:indexTextSize="13sp" />

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_index"
            android:gravity="center"
            android:text="A"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="invisible" />

    </RelativeLayout>
</RelativeLayout>