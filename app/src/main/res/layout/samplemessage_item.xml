<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="66dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:orientation="horizontal">


    <TextView
        android:id="@+id/xuhao"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="序号"
        android:textColor="#424242"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/samplename"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="样品名称"
        android:textColor="#424242"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/testprojectname"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="检测项目"
        android:textColor="#424242"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/standnum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:text="标准号"
        android:textColor="#424242"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/standvalue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="标准值"
        android:textColor="#424242"
        android:textSize="16dp"/>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="#424242"
        >

        <ImageButton
            android:id="@+id/sample_edtor"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/big_edtor"/>

        <ImageButton
            android:id="@+id/sample_delete"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/sample_edtor"
            android:background="@drawable/delete_new"/>
    </RelativeLayout>


</LinearLayout>