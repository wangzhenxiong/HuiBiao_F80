<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing_img"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout style="@style/rect_style">

            <TextView
                android:id="@+id/samplingofsingle"
                style="@style/text_button_style"
                android:drawableTop="@drawable/samplingofsingle_icn"
                android:text="采样单" />

            <TextView
                android:id="@+id/startingtest"
                style="@style/text_button_style"
                android:drawableTop="@drawable/startingtest_icn"
                android:text="开始检测" />

            <TextView
                android:id="@+id/record"
                style="@style/text_button_style"
                android:drawableTop="@drawable/record_icn"
                android:text="检测记录" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>